<% if flash[:notice].present? || flash[:alert].present? %>
    <div data-controller="flash" 
       data-flash-dismiss-after-value="3000"
       class="container flex flex-col justify-center items-center mt-10">
        <% if notice = flash[:notice] %>
            <div data-flash-target="message"
           class="py-2 px-3 bg-green-500 text-neutral-200 font-medium rounded-md transition-opacity duration-500 ease-in-out opacity-100">
                <%= notice %>
            </div>
        <% end %>

        <% if alert = flash[:alert] %>
            <div data-flash-target="message"
           class="py-2 px-3 bg-red-500 text-neutral-200 font-medium rounded-md transition-opacity duration-500 ease-in-out opacity-100">
                <%= alert %>
            </div>
        <% end %>
    </div>
<% end %>
