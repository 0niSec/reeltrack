<div class="px-6 py-8 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <h2 class="text-center text-2xl font-bold leading-9 tracking-tight">Create your account</h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-sm">
        <%= form_with(url: sign_up_path, class: "space-y-6") do |f| %>
            <div class="space-y-1">
                <%= f.label :email, class: "block font-medium leading-6" %>
                <%= f.email_field :email, class: "block w-full shadow rounded-md border border-gray-400  focus:outline-none focus:ring-1 focus:ring-primary-600 focus:border-primary-600 bg-primary-800/20 px-3 py-2 mt-2" %>
            </div>

            <div class="space-y-1">
                <%= f.label :password, class: "block font-medium leading-6" %>
                <%= f.password_field :password, class: "block w-full shadow rounded-md border border-gray-400 focus:outline-none focus:ring-1 focus:ring-primary-600 focus:border-primary-600 bg-primary-800/20 px-3 py-2 mt-2" %>
            </div>

            <div class="space-y-1">
                <%= f.label :password_confirmation, "Confirm password", class: "block font-medium leading-6" %>
                <%= f.password_field :password_confirmation, class: "block w-full shadow rounded-md border border-gray-400 focus:outline-none focus:ring-1 focus:ring-primary-600 focus:border-primary-600 bg-primary-800/20 px-3 py-2 mt-2" %>
            </div>

            <%= f.submit "Sign up", class: "flex w-full cursor-pointer justify-center rounded-md bg-primary-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-primary-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600" %>
        <% end %>

        <p class="mt-8 text-center text-sm text-gray-500">
            Already have an account?
            <%= link_to "Sign in", login_path, class: "font-semibold leading-6 text-primary-600 hover:text-primary-500" %>
        </p>
    </div>
</div>
