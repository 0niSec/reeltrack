<div class="review mt-4">
    <div class="flex items-center">
        <%= image_tag user.profile.avatar_url, class: "w-10 h-10 rounded-full object-cover", alt: "#{user.name}'s avatar" %>
        <div class="ml-3">
            <div class="text-sm font-semibold text-primary-500">Review by <%= user.name %></div>
            <div class="text-xs text-gray-400"><%= review.created_at.strftime("%B %d, %Y") %></div>
        </div>
    </div>
    <p class="mt-2 text-primary-400"><%= review.text %></p>
</div>
