<footer class="mt-auto border-t border-primary-800">
    <div class="px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 justify-items-center">
            <%# About Section %>
            <div class="max-w-sm">
                <h3 class="text-lg font-bold mb-4">About Reeltrack</h3>
                <p class="text-neutral-400">Track your favorite movies and TV shows, create watchlists, and discover new content.</p>
            </div>

            <%# Quick Links %>
            <div>
                <h3 class="text-lg font-bold mb-4">Quick Links</h3>
                <ul class="space-y-2">
                    <li><%= link_to "Home", root_path, class: "text-neutral-400 hover:text-primary-500 transition-colors" %></li>
                    <li><%= link_to "Movies", "#", class: "text-neutral-400 hover:text-primary-500 transition-colors" %></li>
                    <li><%= link_to "TV Shows", "#", class: "text-neutral-400 hover:text-primary-500 transition-colors" %></li>
                    <li><%= link_to "My Lists", "#", class: "text-neutral-400 hover:text-primary-500 transition-colors" %></li>
                </ul>
            </div>

            <%# Legal Links %>
            <div>
                <h3 class="text-lg font-bold mb-4">Legal</h3>
                <ul class="space-y-2">
                    <li><%= link_to "Privacy Policy", "#", class: "text-neutral-400 hover:text-primary-500 transition-colors" %></li>
                    <li><%= link_to "Terms of Service", "#", class: "text-neutral-400 hover:text-primary-500 transition-colors" %></li>
                    <li><%= link_to "Contact Us", "#", class: "text-neutral-400 hover:text-primary-500 transition-colors" %></li>
                </ul>
            </div>
        </div>

        <%# Copyright %>
        <div class="mt-8 pt-8 border-t border-primary-800 text-center text-neutral-400">
            <p>&copy; <%= Time.current.year %> Reeltrack. All rights reserved.</p>
            <p>Powered by <%= link_to "The Movie Database", "https://www.themoviedb.org", class: "text-primary-500 hover:text-primary-600 transition-colors" %></p>
            <p>Built with ❤️ <%= link_to "Ruby on Rails", "https://rubyonrails.org", class: "text-primary-500 hover:text-primary-600 transition-colors" %> and <%= link_to "Tailwind CSS", "https://tailwindcss.com", class: "text-primary-500 hover:text-primary-600 transition-colors" %></p>
        </div>
    </div>
</footer>
